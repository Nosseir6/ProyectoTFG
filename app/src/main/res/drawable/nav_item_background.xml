<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#E6D4B6" /> <!-- Color de fondo cuando estÃ¡ seleccionado -->
            <stroke android:width="2dp" android:color="#A0522D" /> <!-- Borde -->
            <corners android:radius="12dp" /> <!-- Bordes redondeados -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" /> <!-- Fondo normal -->
        </shape>
    </item>
</selector>