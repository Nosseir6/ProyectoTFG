<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Contenido principal con barra y scroll -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Toolbar si lo necesitas (puedes integrarlo con ActionBar) -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:title="Informaci칩n sobre la Leche"
            android:titleTextColor="#FFFFFF" />

        <!-- Aqu칤 va tu contenido -->
        <ScrollView
            android:id="@+id/mainScroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFDE7">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- T칤tulo -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="La Leche: Propiedades y Curiosidades"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#5D4037"
                    android:layout_marginBottom="16dp" />

                <!-- SECCI칍N: PAR츼METROS -->
                <TextView
                    android:id="@+id/sectionParametros"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="游늵 Par치metros F칤sico-Qu칤micos"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <!-- ... el resto de secciones como las tienes ... -->

                <!-- SECCI칍N: SIMULADOR -->
                <TextView
                    android:id="@+id/sectionSimulador"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="游빍 Simulador B치sico"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="24dp" />

                <!-- SECCI칍N: COMPARATIVA -->
                <TextView
                    android:id="@+id/sectionComparativa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="游볱 Comparativa de Tipos de Leche"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#3E2723"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="8dp" />

                <!-- Bot칩n volver -->
                <Button
                    android:id="@+id/btnVolver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Volver"
                    android:layout_marginTop="32dp"
                    android:backgroundTint="#FFCDD2"
                    android:textColor="#B71C1C" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- Drawer lateral -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#FFFFFF"
        app:menu="@menu/menu_drawer"
        app:itemIconSize="24dp"
        />

</androidx.drawerlayout.widget.DrawerLayout>
