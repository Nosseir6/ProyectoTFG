<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2B2D30"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4EE2FB"
        android:orientation="vertical"
        android:padding="24dp">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardElevation="6dp"
            app:cardCornerRadius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/title_aerobios"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/recuento_total_de_aerobios_mes_filos"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:fontFamily="casual" />

                <TextView
                    android:id="@+id/content_aerobios"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Texto_aerobios"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    android:fontFamily="casual" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardElevation="6dp"
            app:cardCornerRadius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/title_coliformes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/coliformes_y_e_coli"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:fontFamily="casual" />

                <TextView
                    android:id="@+id/content_coliformes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Texto_Coliformes"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    android:fontFamily="casual" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardElevation="6dp"
            app:cardCornerRadius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/title_salmonella"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/salmonella_spp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:fontFamily="casual" />

                <TextView
                    android:id="@+id/content_salmonella"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Texto_Salmonella"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    android:fontFamily="casual" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardElevation="6dp"
            app:cardCornerRadius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/title_listeria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/listeria_monocytogenes"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:fontFamily="casual" />

                <TextView
                    android:id="@+id/content_listeria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Texto_listeria"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    android:fontFamily="casual" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
