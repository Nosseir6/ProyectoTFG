<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Clasificación de la carne según calidad"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#4E342E"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Carne normal -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="✅ Carne Normal"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2E7D32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:src="@drawable/carne_normal"
                    android:scaleType="centerInside"
                    android:layout_marginVertical="8dp" />

                <TextView
                    android:text="Color rojizo, textura firme y jugosa, pH entre 5.5 y 6.0. Ideal para consumo."
                    android:textSize="16sp"
                    android:textColor="#444444"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Carne PSE -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="⚠️ Carne PSE"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#C62828"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:src="@drawable/carne_pse"
                    android:scaleType="centerInside"
                    android:layout_marginVertical="8dp" />

                <TextView
                    android:text="Pálida, blanda y con exceso de líquido. pH < 5.4. Provocada por estrés pre-mortem."
                    android:textSize="16sp"
                    android:textColor="#444444"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Carne DFD -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="⚠️ Carne DFD"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#EF6C00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:src="@drawable/carne_dfd"
                    android:scaleType="centerInside"
                    android:layout_marginVertical="8dp" />

                <TextView
                    android:text="Oscura, firme y seca. pH > 6.0. Menor vida útil y peor apariencia comercial."
                    android:textSize="16sp"
                    android:textColor="#444444"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
