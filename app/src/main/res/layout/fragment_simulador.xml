<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollViewSimulador"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Simulador Interactivo"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1E88E5"
            android:gravity="center"
            android:paddingBottom="16dp" />

        <!-- Instrucciones -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ajusta los parámetros y observa cómo cambia la leche:"
            android:textSize="16sp"
            android:textStyle="italic"
            android:textColor="#333333"
            android:paddingBottom="12dp" />

        <!-- CARDVIEW DE PARÁMETROS -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="12dp"
            android:backgroundTint="#E3F2FD">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- BLOQUE PARA pH -->
                <TextView
                    android:id="@+id/phText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="pH: 7"
                    android:textSize="16sp"
                    android:textColor="#1976D2" />

                <SeekBar
                    android:id="@+id/phSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="14"
                    android:progress="7" />

                <ImageView
                    android:id="@+id/phImageView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="8dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/leche_normal" />

                <TextView
                    android:id="@+id/phMensaje"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="pH ideal"
                    android:textSize="16sp"
                    android:textColor="#444444"
                    android:layout_marginBottom="24dp" />

                <!-- BLOQUE PARA Acidez -->
                <TextView
                    android:id="@+id/acidezText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Acidez: 7ºD"
                    android:textSize="16sp"
                    android:textColor="#1976D2" />

                <SeekBar
                    android:id="@+id/acidezSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="20"
                    android:progress="14" />

                <ImageView
                    android:id="@+id/acidezImageView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="8dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/leche_normal" />

                <TextView
                    android:id="@+id/acidezMensaje"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Acidez normal"
                    android:textSize="16sp"
                    android:textColor="#444444"
                    android:layout_marginBottom="24dp" />

                <!-- BLOQUE PARA Temperatura -->
                <TextView
                    android:id="@+id/tempText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Temperatura: 20°C"
                    android:textSize="16sp"
                    android:textColor="#1976D2" />

                <SeekBar
                    android:id="@+id/tempSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="20" />

                <ImageView
                    android:id="@+id/tempImageView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="8dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/leche_normal" />

                <TextView
                    android:id="@+id/tempMensaje"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Temperatura ambiente"
                    android:textSize="16sp"
                    android:textColor="#444444"
                    android:layout_marginBottom="24dp" />

                <!-- BLOQUE PARA Densidad -->
                <TextView
                    android:id="@+id/densidadText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Densidad: 1.03 g/cm³"
                    android:textSize="16sp"
                    android:textColor="#1976D2" />

                <SeekBar
                    android:id="@+id/densidadSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="20"
                    android:progress="10" />

                <ImageView
                    android:id="@+id/densidadImageView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="8dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/leche_normal" />

                <TextView
                    android:id="@+id/densidadMensaje"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Densidad ideal"
                    android:textSize="16sp"
                    android:textColor="#444444"
                    android:layout_marginBottom="16dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
