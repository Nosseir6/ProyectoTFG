<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Imagen ilustrativa -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/leche_intro"
            android:layout_marginBottom="16dp"
            android:contentDescription="Imagen de introducción a la leche" />

        <!-- Título principal -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Introducción a la leche"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#37474F"
            android:layout_marginBottom="12dp" />

        <!-- Tarjeta bienvenida -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="6dp"
            app:cardCornerRadius="16dp"
            android:backgroundTint="#FFFFFF"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Bienvenido a tu guía interactiva sobre la leche: explora sus propiedades, aprende cómo se analiza y descubre su importancia en la alimentación."
                android:textSize="18sp"
                android:textColor="#212121" />
        </androidx.cardview.widget.CardView>

        <!-- Tarjeta contenido -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="16dp"
            android:backgroundTint="#F0F4F8"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="La leche es uno de los alimentos más completos que existen. Rica en calcio, proteínas, vitaminas y minerales, es clave en la nutrición humana.\n\n• Cómo se analiza la calidad de la leche.\n• Parámetros como pH, acidez, densidad y temperatura.\n• Simuladores interactivos.\n• Consejos y curiosidades científicas."
                android:textSize="18sp"
                android:textColor="#333333" />
        </androidx.cardview.widget.CardView>

        <!-- Tarjeta curiosidad -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="3dp"
            app:cardCornerRadius="16dp"
            android:backgroundTint="#E8F5E9">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="¿Sabías que la leche puede revelar mucho sobre la salud del animal que la produce? Su análisis es esencial para la seguridad alimentaria."
                android:textSize="16sp"
                android:textColor="#2E7D32" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
