<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical" android:padding="16dp"
        android:background="#FFF3E0"
        android:layout_width="match_parent" android:layout_height="wrap_content">


        <!-- Título principal con recuadro -->
        <TextView
            android:id="@+id/tv_macronutrientes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tit_macronutrientes"
            android:textSize="30sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="12dp"
            android:background="@drawable/rounded_box"
            android:textColor="#A15531"
            android:layout_marginBottom="12dp"/>

        <!-- Sección: Hidratos de carbono -->
        <LinearLayout
            android:id="@+id/section_carbohidratos"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/title_carbohidratos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#664fa3"
                android:text="@string/desp_hidratos_de_carbono"
                android:textStyle="bold"
                android:textSize="25sp"
                android:paddingBottom="4dp"
                android:clickable="true"
                android:focusable="true" />

            <LinearLayout
                android:id="@+id/content_carbohidratos"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:paddingLeft="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:text="@string/texto_harina"
                    android:paddingBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/texto_almidon"
                    android:paddingLeft="16dp"
                    android:textSize="23sp"
                    android:textStyle="bold"
                    android:paddingBottom="2dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_almidon"
                    android:textSize="18sp"
                    android:paddingLeft="32dp"
                    android:paddingBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="23sp"
                    android:text="@string/texto_azucares"
                    android:paddingLeft="16dp"
                    android:textStyle="bold"
                    android:paddingBottom="2dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="@string/text_azucares"
                    android:paddingLeft="32dp"
                    android:paddingBottom="8dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Sección: Proteínas -->
        <LinearLayout
            android:id="@+id/section_proteinas"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/title_proteinas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#664fa3"
                android:text="@string/desp_proteinas"
                android:textStyle="bold"
                android:textSize="25sp"
                android:paddingBottom="4dp"
                android:clickable="true"
                android:focusable="true" />

            <LinearLayout
                android:id="@+id/content_proteinas"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:paddingLeft="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text1_proteinas"
                    android:textSize="18sp"
                    android:paddingBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/texto_trigo"
                    android:textSize="18sp"
                    android:paddingBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text2_proteinas"
                    android:textSize="18sp"
                    android:paddingBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text3_proteinas"
                    android:textSize="18sp"
                    android:paddingBottom="8dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Sección: Lípidos -->
        <LinearLayout
            android:id="@+id/section_lipidos"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title_lipidos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#664fa3"
                android:text="@string/desp_lipidos"
                android:textStyle="bold"
                android:textSize="25sp"
                android:paddingBottom="4dp"
                android:clickable="true"
                android:focusable="true" />

            <LinearLayout
                android:id="@+id/content_lipidos"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:paddingLeft="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="@string/text1_lipidos"
                    android:paddingBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="@string/text2_lipidos"
                    android:paddingBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="@string/text3_lipidos"
                    android:paddingBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="@string/text4_lipidos"
                    android:paddingBottom="8dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Título desplegable: Fibra -->
        <TextView
            android:id="@+id/title_fibra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#664fa3"
            android:text="@string/desp_fibra"
            android:textStyle="bold"
            android:textSize="25sp"
            android:paddingTop="12dp"
            android:paddingBottom="4dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true" />

        <!-- Contenido desplegable: Fibra -->
        <LinearLayout
            android:id="@+id/content_fibra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="@string/intro_fibra"
                android:paddingLeft="16dp"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="@string/text1_fibra"
                android:paddingLeft="32dp"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="@string/text2_fibra"
                android:paddingLeft="32dp"
                android:paddingBottom="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="@string/text3_fibra"
                android:paddingLeft="16dp"
                android:paddingBottom="12dp" />
        </LinearLayout>


        <!-- Título principal: Micronutrientes -->
        <TextView
            android:id="@+id/tv_micronutrientes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/encabezado_micronutrientes"
            android:textSize="30sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="12dp"
            android:background="@drawable/rounded_box"
            android:textColor="#A15531"
            android:layout_marginBottom="12dp"/>

        <!-- Sección: Minerales -->
        <LinearLayout
            android:id="@+id/section_minerales"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/title_minerales"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#664fa3"
                android:text="@string/desp_minerales"
                android:textStyle="bold"
                android:textSize="25sp"
                android:paddingBottom="4dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground" />

            <LinearLayout
                android:id="@+id/content_minerales"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:paddingLeft="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text1_minerales"
                    android:textSize="18sp"
                    android:paddingBottom="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/texto_minerales"
                    android:textSize="18sp"
                    android:paddingBottom="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text3_minerales"
                    android:textSize="18sp"
                    android:paddingBottom="12dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Sección: Vitaminas -->
        <LinearLayout
            android:id="@+id/section_vitaminas"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title_vitaminas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#664fa3"
                android:text="@string/desp_vitaminas"
                android:textStyle="bold"
                android:textSize="25sp"
                android:paddingBottom="4dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground" />

            <LinearLayout
                android:id="@+id/content_vitaminas"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:paddingLeft="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text1_vitaminas"
                    android:textSize="18sp"
                    android:paddingBottom="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text2_vitaminas"
                    android:textSize="18sp"
                    android:paddingBottom="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text3_vitaminas"
                    android:textSize="18sp"
                    android:paddingBottom="12dp" />
            </LinearLayout>
        </LinearLayout>


        <!-- Encabezado grande marrón Agua -->
        <TextView
            android:id="@+id/tv_agua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/encabezado_agua"
            android:textSize="30sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="12dp"
            android:background="@drawable/rounded_box"
            android:textColor="#A15531"
            android:layout_marginBottom="8dp" />

        <!-- Contenido fijo debajo de Agua (no desplegable) -->
        <LinearLayout
            android:id="@+id/content_agua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text1_agua"
                android:textSize="18sp"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text2_agua"
                android:textSize="18sp"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text3_agua"
                android:textSize="18sp"
                android:paddingBottom="4dp" />
        </LinearLayout>

        <!-- Encabezado grande marrón Otros Componentes -->
        <TextView
            android:id="@+id/tv_otros_componentes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/encabezado_otros"
            android:textSize="30sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="12dp"
            android:background="@drawable/rounded_box"
            android:textColor="#A15531"
            android:layout_marginBottom="8dp" />

        <!-- Desplegable: Enzimas -->
        <TextView
            android:id="@+id/title_enzimas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/desp_enzimas"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#664fa3"
            android:paddingTop="12dp"
            android:paddingBottom="4dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true" />

        <LinearLayout
            android:id="@+id/content_enzimas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingLeft="16dp"
            android:paddingBottom="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/intro_enzimas"
                android:textSize="21sp"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:text="@string/texto_amilasas"
                android:textSize="18sp"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:text="@string/texto_proteasas"
                android:textSize="18sp"
                android:paddingBottom="4dp" />
        </LinearLayout>

        <!-- Desplegable: Compuestos fenólicos y antioxidantes -->
        <TextView
            android:id="@+id/title_compuestos_fenolicos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/desp_compuestos"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#664fa3"
            android:paddingTop="12dp"
            android:paddingBottom="4dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true" />

        <LinearLayout
            android:id="@+id/content_compuestos_fenolicos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingLeft="16dp"
            android:paddingBottom="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text1_compuestos"
                android:textSize="18sp"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text2_compuestos"
                android:textSize="18sp"
                android:paddingBottom="4dp" />
        </LinearLayout>

        <!-- Desplegable: Pigmentos naturales -->
        <TextView
            android:id="@+id/title_pigmentos_naturales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/desp_pigmentos"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#664fa3"
            android:paddingTop="12dp"
            android:paddingBottom="4dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true" />

        <LinearLayout
            android:id="@+id/content_pigmentos_naturales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingLeft="16dp"
            android:paddingBottom="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/texto_pigmentos"
                android:textSize="18sp"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text2_pigmentos"
                android:textSize="18sp"
                android:paddingBottom="4dp" />
        </LinearLayout>

        <!-- Desplegable: Antinutrientes -->
        <TextView
            android:id="@+id/title_antinutrientes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/desp_antinutrientes"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#664fa3"
            android:paddingTop="12dp"
            android:paddingBottom="4dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true" />

        <LinearLayout
            android:id="@+id/content_antinutrientes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingLeft="16dp"
            android:paddingBottom="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text1_antinutrientes"
                android:textSize="18sp"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/texto_fitatos"
                android:textSize="18sp"
                android:paddingBottom="4dp" />

        </LinearLayout>



    </LinearLayout>
</ScrollView>
