<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Composición Básica por Tipo de Carne"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#B71C1C"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Tarjeta: Ternera -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="🐄 Ternera"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#3E2723"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView android:text="• Agua: 75%"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView android:text="• Proteínas: 21%"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView android:text="• Grasas: 3%"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView android:text="• Minerales: Fe, Zn, K"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView android:text="• Vitaminas: B12, B6, A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Tarjeta: Cerdo -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="🐖 Cerdo"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#4E342E"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView android:text="• Agua: 65%"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView android:text="• Proteínas: 20%"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView android:text="• Grasas: 15%"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView android:text="• Minerales: Zn, Fe, P"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView android:text="• Vitaminas: B1, B3, D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Tarjeta: Pollo -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="🐔 Pollo"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#5D4037"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView android:text="• Agua: 72%"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView android:text="• Proteínas: 22%"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView android:text="• Grasas: 5%"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView android:text="• Minerales: P, K, Se"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView android:text="• Vitaminas: B3, B6, B12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
