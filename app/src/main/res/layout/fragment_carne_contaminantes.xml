<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FAFAFA"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Contaminantes Comunes en la Carne"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#B71C1C"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Card: Metales pesados -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#FFCDD2"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="☣️ Metales Pesados (Pb, Hg, Cd)"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#37474F"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="RIESGO ALTO"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:background="@drawable/bg_chip_red"
                    android:padding="6dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="• Riesgos: neurotóxicos, acumulativos\n• Límite legal: ≤ 0.1 mg/kg\n• Origen: agua contaminada, piensos"
                    android:textSize="16sp"
                    android:textColor="#555"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card: Antibióticos -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#FFE0B2"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="💊 Antibióticos"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#37474F"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="RIESGO MODERADO"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:background="@drawable/bg_chip_orange"
                    android:padding="6dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="• Riesgos: resistencia bacteriana\n• Límite: depende del compuesto\n• Origen: tratamientos veterinarios"
                    android:textSize="16sp"
                    android:textColor="#555"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card: PCBs y Dioxinas -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#EF9A9A"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="🔥 PCBs y Dioxinas"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#37474F"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="RIESGO ALTO"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:background="@drawable/bg_chip_red"
                    android:padding="6dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="• Riesgos: cancerígenos, disruptores hormonales\n• Límite legal: muy bajo\n• Origen: contaminación industrial"
                    android:textSize="16sp"
                    android:textColor="#555"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
