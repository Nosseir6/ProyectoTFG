<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Contaminantes comunes en la carne"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#880E4F"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Metales pesados -->
        <TextView
            android:text="🧪 Metales pesados (Plomo, Mercurio, Cadmio)"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#C62828"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Pueden acumularse en órganos y tejidos. Su consumo prolongado afecta el sistema nervioso, renal y óseo. Se detectan mediante análisis espectrofotométricos."
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:textColor="#444444"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Antibióticos -->
        <TextView
            android:text="💊 Residuos de antibióticos"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#283593"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Presentes si el animal fue tratado poco antes del sacrificio. Pueden causar resistencias bacterianas en humanos. La normativa exige periodos de retirada obligatorios."
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:textColor="#444444"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- PCBs y pesticidas -->
        <TextView
            android:text="☣️ PCBs y pesticidas"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#F9A825"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Contaminantes ambientales lipofílicos que se acumulan en la grasa. Prohibidos o regulados en la UE. Pueden causar efectos endocrinos y carcinógenos."
            android:textSize="16sp"
            android:textColor="#444444"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Límites legales -->
        <TextView
            android:text="\n⚖️ Límites legales y controles"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#4E342E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="El Reglamento CE 1881/2006 y normas posteriores establecen los límites máximos de estos contaminantes. Los laboratorios oficiales controlan mediante análisis periódicos."
            android:textSize="16sp"
            android:textColor="#444444"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>
