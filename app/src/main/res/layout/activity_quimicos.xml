                    <TextView android:id="@+id/valor_ph" android:padding="8dp"/>
                    <TextView android:id="@+id/estado_ph" android:padding="8dp"/>
                </TableRow>

            </TableLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
