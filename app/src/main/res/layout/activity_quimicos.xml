        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:src="@drawable/pescado_fresco_quimico"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/pescado_fresco_quimicos" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="casual"
                    android:text="@string/Texto_pescado_fresco_quimicos"
                    android:textColor="#000000"
                    android:textStyle="bold" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:src="@drawable/pescado_deficiente_quimico"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/pescado_con_deficiencia_quimicos" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="casual"
                    android:text="@string/texto_pescado_con_deficiencia_quimicos"
                    android:textColor="#000000"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/SimuladorLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Texto_simulador_quimico"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/dayLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Texto_dias_simulador"
                android:textSize="18sp"
                android:textStyle="bold" />

            <SeekBar
                android:id="@+id/daySeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="10" />

            <TableLayout
                android:id="@+id/tabla_quimicos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/borde_tabla"
                android:padding="8dp"
                android:layout_marginBottom="16dp"
                android:stretchColumns="1,2"
                android:shrinkColumns="1,2">


                <TableRow>
                    <TextView android:text="@string/Texto_parametro" android:textStyle="bold" android:padding="8dp"/>
                    <TextView android:text="@string/Texto_valor" android:textStyle="bold" android:padding="8dp"/>
                    <TextView android:text="@string/Texto_estado" android:textStyle="bold" android:padding="8dp"/>
                </TableRow>


                <TableRow>
                    <TextView android:text="@string/Texto_tabla_BVT" android:padding="8dp"/>
                    <TextView android:id="@+id/valor_bvt" android:padding="8dp"/>
                    <TextView android:id="@+id/estado_bvt" android:padding="8dp"/>
                </TableRow>

                <TableRow>
                    <TextView android:text="@string/Texto_tabla_amoniaco" android:padding="8dp"/>
                    <TextView android:id="@+id/valor_amoniaco" android:padding="8dp"/>
                    <TextView android:id="@+id/estado_amoniaco" android:padding="8dp"/>
                </TableRow>

                <TableRow>
